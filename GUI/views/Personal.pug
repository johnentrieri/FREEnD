html
	head
		include includes/head.pug

	body

		include includes/navbar.pug

		main(role="main" class="container")

			div(class="container")

				div(class="row")
				
					div(class="col-lg-12")

						h3 Race Abilities
						- for (var i = 0; i < data.calculated.raceAbilities.length; i++)
								p
									a(
										class="btn"
										data-toggle="collapse"
										href="#rCollapse"+i
										role="button"
										aria-expanded="false"
										aria-controls="rCollapse"+i
									)
										= "+"
									b= data.calculated.raceAbilities[i].name

								div(
									class="collapse"
									id="rCollapse"+i
								)
									div(class="card card-body")
										p
											= data.calculated.raceAbilities[i].description	
						br

						h3 Class Abilities
						- for (var i = 0; i < data.calculated.classAbilities.length; i++)
								p
									a(
										class="btn"
										data-toggle="collapse"
										href="#collapse"+i
										role="button"
										aria-expanded="false"
										aria-controls="collapse"+i
									)
										= "+"
									b= data.calculated.classAbilities[i].name

								div(
									class="collapse"
									id="collapse"+i
								)
									div(class="card card-body")
										p
											= data.calculated.classAbilities[i].description											
 
		include includes/bootjs.pug

